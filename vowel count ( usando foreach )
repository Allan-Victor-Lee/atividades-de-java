public class Vowels {

  public static int getCount(String str) {
    int count = 0;

    str = str.toLowerCase();

    for (char ch : str.toCharArray()) {
      if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
        count++;
      }
    }

    System.out.println("NÃºmero de vogais: " + count);
    return count;
  }

  public static void main(String[] args) {
    getCount("Programacao");
  }
}
