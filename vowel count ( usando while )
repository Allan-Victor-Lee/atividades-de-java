public class Vowels {

  public static int getCount(String str) {
    int count = 0;
    int i = 0;

    str = str.toLowerCase();

    while (i < str.length()) {
      char ch = str.charAt(i);
      if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
        count++;
      }
      i++;
    }

    System.out.println("NÃºmero de vogais: " + count);
    return count;
  }

  public static void main(String[] args) {
    getCount("Programacao");
  }
}
